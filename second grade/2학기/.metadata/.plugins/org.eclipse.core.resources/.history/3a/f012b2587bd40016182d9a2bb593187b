		icon9=new ImageIcon("img/esens.jpg");
		icon10=new ImageIcon("img/crucial.jpg");
		icon11=new ImageIcon("img/qwala.jpg");
		icon12=new ImageIcon("img/fana.jpg");
		jbt1=new JButton("",icon1);
		jbt2=new JButton("",icon2);
