	JButton jbt1,jbt2,jbt3,jbt4,jbt5,jbt6,jbt7,jbt8,jbt9,jbt10,jbt11,jbt12; //앨범커버버튼
	JButton submit; //버튼
	JTextField jtf1;//돈투입구
	ImageIcon icon1,icon2,icon3,icon4,icon5,icon6,icon7,icon8,icon9,icon10,icon11,icon12;//앨범사진
