	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		machine frame=new machine();
		frame.setLayout(fl);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(740,650);
		frame.setVisible(true);

	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		final int beenzino=12000;
		final int samuel=12900;
		final int justhis=12000;
		final int hwaji=14200;
		final int paloalto=11500;
		final int donmils=12900;
		final int nucksal=12900;
		final int crush=11900;
		final int esens=13400;
		final int crucial=12900;
		final int qwala=11500;
		final int fana=11500;
		//앨범 가격
		
		
		
		String s=jtf1.getText();
		
		if(e.getSource()==submit){
			int money=Integer.parseInt(s);
			result.setText(money+"원이 투입되었습니다");
			change=money;
			
			
		}
		
		if(e.getSource()==jbt1){
			if(change>beenzino){
				
				change=change-beenzino;
				album.setText(" "+change);
				result.setText("빈지노 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
			
		}
		else if(e.getSource()==jbt2){
			
			if(change>samuel){
			
				change=change-samuel;
				album.setText(" "+change);
				result.setText("서사무엘 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt3){
			
			if(change>justhis){
				change=change-justhis;
				album.setText(" "+change);
				result.setText("저스디스 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt4){
			if(change>hwaji){
				change=change-hwaji;
				album.setText(" "+change);
				result.setText("화지 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt5){
			if(change>paloalto){
				change=change-paloalto;
				album.setText(" "+change);
				result.setText("팔로알토 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt6){
			if(change>donmils){
				change=change-donmils;
				album.setText(" "+change);
				result.setText("던밀스 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt7){
			if(change>nucksal){
				change=change-nucksal;
				album.setText(" "+change);
				result.setText("넉살 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt8){
			if(change>crush){
				change=change-crush;
				album.setText(" "+change);
				result.setText("크러쉬 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt9){
			if(change>esens){
				change=change-esens;
				album.setText(" "+change);
				result.setText("이센스 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt10){
			if(change>crucial){
				change=change-crucial;
				album.setText(" "+change);
				result.setText("크루셜스타 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt11){
			if(change>qwala){
				change=change-qwala;
				album.setText(" "+change);
				result.setText("콸라 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
		else if(e.getSource()==jbt12){
			if(change>fana){
				change=change-fana;
				album.setText(" "+change);
				result.setText("화나 앨범 한 장 구매하셨습니다!");
			}
			else
			{
				album.setText("돈을 넣어주세요");
				jtf1.selectAll();
				jtf1.requestFocus();
			}
		}
	
	}

}



