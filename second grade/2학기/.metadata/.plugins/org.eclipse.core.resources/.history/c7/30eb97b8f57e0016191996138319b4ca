import java.awt.*;
import java.awt.event.*;
public class j0920_1 extends Frame implements ActionListener {
	Button b1;
	Panel p;
	j0920_1(){
		b1=new Button("버튼");
		p=new Panel();
		
		p.add(b1);
		this.add(p);
		//this.pack();//크기에 맞춰놓는것
		this.setSize(500, 500);
		this.setVisible(true);
		
	}
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new j0920_1();
	}

}
